<input type="checkbox" name="toggle" id="toggle" />
<label id="stats-lable" for="toggle"></label>

<div class="stats">
  <h1 class="stats-title">Average age: <span class="stats-info"><%= @comedians.average_age %> </span></h1>
  <h1 class="stats-title">Average specials run time: <span class="stats-info"><%= @specials.average_runtime.to_f %></span></h1>
  <h1 class="stats-title">Birthplaces:</h1>
  <marquee 
    behavior="scroll" 
    direction="left" 
    onmouseover="this.stop();" 
    onmouseout="this.start();">
    <% @comedians.unique_cities.each do |city| %>
      <%= city %>,
    <% end %>
  </marquee> 
</div>


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <h1 class="title">- Laugh Tracks -</h1>
      <img class="d-block w-100" src="https://www.wired.com/wp-content/uploads/2016/11/DaveChappelleNetflix-1.jpg" alt="First slide">
    </div>
    <% @comedians.each do |comic| %>
      <div class="carousel-item" id="carousel_<%= comic.id %>">
        <h2 class="comic-name"><%= comic.name %></h2>
        <p class="comic-info" id="info_<%= comic.id %>">
          <%= comic.age %> - <%= comic.city %>
        </p>
        <h3 class="specials-main-title">Specials</h3>
        <div class="specials-container">
          <% comic.specials.each do |special| %>
            <div class="special-container-single" id="special_<%= special.id %>">
              <img src=<%= special.image_url %>>
              <div class="overlay">
                <div class="special-title">
                  <p><%= special.name %></p>
                  <p>--</p> 
                  <p> Runtime: <%= special.run_time.to_i %>m</p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="profile-container">
          <img class="d-block w-50 fade-overlay" src="/fade.png" alt="fade styling">
          <img class="d-block w-50 profile-pic" id="img_<%= comic.id %>" src="<%= comic.img %>" >
        </div>
      </div>
    <% end %>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>