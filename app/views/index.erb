<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <h1 class="title">- Laugh Tracks -</h1>
      <img class="d-block w-100" src="https://www.wired.com/wp-content/uploads/2016/11/DaveChappelleNetflix-1.jpg" alt="First slide">
    </div>
    <% @comedians.each do |comic| %>
      <div class="carousel-item">
        <h2 class="comic-name"><%= comic.name %></h2>
        <p class="comic-info"><%= comic.age %> - <%= comic.city %></p>
        <div class="profile-container">
          <img class="d-block w-50 fade-overlay" src="/fade.png" alt="fade styling">
          <img class="d-block w-50 profile-pic" src="<%= comic.img %>" >
        </div>
      </div>
    <% end %>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>